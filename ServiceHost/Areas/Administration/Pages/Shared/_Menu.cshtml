@using _0_Framework.Application
@using _0_Framework.Infrastructure
@inject IAuthHelper AuthHelper
@{
    var currenAccount = AuthHelper.CurrentAccountInfo();
}
<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                <img src="~/AdminTheme/assets/images/users/avatar-1.jpg" alt="" class="thumb-md img-circle">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@currenAccount.Fullname - @currenAccount.Mobile</a>
                    <ul class="dropdown-menu">
                        <li><a href="javascript:void(0)"><i class="md md-face-unlock"></i> Profile<div class="ripple-wrapper"></div></a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings"></i> Settings</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-lock"></i> Lock screen</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings-power"></i> Logout</a></li>
                    </ul>
                </div>

                <p class="text-muted m-0">@currenAccount.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect @(Context.Request.Path == "/Administration" ? "active" : "")"><i class="fa fa-home"></i><span> داشبورد </span></a>
                </li>
                <li>
                    <a asp-page="/Comments/Index" class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Comments") ? "active" : "")">
                        <i class="fa fa-comments"></i><span> نظرات </span>
                    </a>
                </li>
                @if (currenAccount.RoleId.ToString() == Roles.Administrator)
                {
                    <li>
                        <a asp-page="/Inventory/Index" class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Inventory") ? "active" : "")"><i class="md md-inbox"></i><span> انبارداری </span></a>
                    </li>
                    <li>
                        <a asp-page="/Shop/Orders/Index" class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Orders") ? "active" : "")"><i class="fa fa-shopping-cart"></i><span> سفارشات </span></a>
                    </li>
                    <li>
                        <a class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Accounts") ? "active" : "")">
                            <i class="md md-person"></i><span> سیستم کاربران </span><span class="pull-left"><i class="fa fa-plus"></i></span>
                        </a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Accounts/Account/Index">کاربران</a></li>
                            <li><a asp-page="/Accounts/Role/Index">نقش ها</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Shop") ? "active" : "")">
                            <i class="md md-shop"></i><span> فروشگاه </span><span class="pull-left"><i class="fa fa-plus"></i></span>
                        </a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Shop/Slide/Index">اسلایدر</a></li>
                            <li><a asp-page="/Shop/ProductCategories/Index">گروه محصولات</a></li>
                            <li><a asp-page="/Shop/Products/Index">محصولات</a></li>
                            <li><a asp-page="/Shop/ProductPictures/Index">عکس محصولات</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Discounts") ? "active" : "")">
                            <i class="fa fa-tags"></i><span> سیستم تخفیفات </span><span class="pull-left"><i class="fa fa-plus"></i></span>
                        </a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Discounts/CustomerDiscounts/Index">تخفیف مشتری</a></li>
                            <li><a asp-page="/Discounts/ColleagueDiscounts/Index">تخفیف همکاری</a></li>
                        </ul>
                    </li>

                }
                <li>
                    <a class="waves-effect  @(Context.Request.Path.StartsWithSegments("/Administration/Blog") ? "active" : "")">
                        <i class="fa fa-rss"></i><span> سیستم بلاگ </span><span class="pull-left"><i class="fa fa-plus"></i></span>
                    </a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Blog/Articles/Index">مقالات</a></li>
                        <li><a asp-page="/Blog/ArticleCategories/Index">دسته بندی مقالات</a></li>
                    </ul>
                </li>
                <li>
                    <a asp-page="/Account" asp-page-handler="Logout" class="waves-effect
@(Context.Request.Path.StartsWithSegments("/Administration/Inventory") ? "active" : "")">
                        <i class="fa fa-sign-out"></i><span> خروج </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>