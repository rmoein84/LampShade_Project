@page "{slug}"
@model ServiceHost.Pages.ArticleModel
@{
    ViewData["Title"] = @Model.Article.Title;
    ViewData["Keywords"] = Model.Article.Keywords;
    ViewData["MetaDescription"] = Model.Article.MetaDescription;
}
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title">@Model.Article.Title</h1>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            <li>
                                <a asp-page="./ArticleCategory" asp-route-slug="@Model.Article.CategorySlug">@Model.Article.CategoryName</a>
                            </li>
                            <li class="active">@Model.Article.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-9 order-1 order-lg-1">
                                <div class="blog-page-content">
                                    <div class="blog-single-post-container">
                                        <h3 class="post-title">@Model.Article.Title</h3>
                                        <div class="post-meta">
                                            <p>
                                                <span>
                                                    <i class="fa fa-calendar"></i> نوشته شده در:
                                                    <a href="#">
                                                        @Model.Article.PublishDate
                                                    </a>
                                                </span>
                                            </p>
                                        </div>
                                        <div class="single-blog-post-media">
                                            <div class="image">
                                                <img src="~/uploadedFiles/@Model.Article.Picture" class="img-fluid"
                                                     alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle">
                                            </div>
                                        </div>
                                        <div class="post-content">
                                            <p>
                                                @Html.Raw(Model.Article.Description)
                                            </p>
                                        </div>
                                        <div class="tag-area">
                                            <span>Tags: </span>
                                            <ul>
                                                @foreach (var tag in Model.Article.Keywords.Split(","))
                                                {
                                                    <li><a href="#">@tag</a>,</li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="social-share-buttons">
                                            <h3>share this post</h3>
                                            <ul>
                                                <li>
                                                    <a class="twitter" href="#">
                                                        <i class="fa fa-twitter"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="facebook" href="#">
                                                        <i class="fa fa-facebook"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="google-plus" href="#">
                                                        <i class="fa fa-google-plus"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="pinterest" href="#">
                                                        <i class="fa fa-pinterest"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="comment-section">
                                        <h3 class="comment-counter">(@Model.Article.Comments.Count()) نظرات</h3>
                                        <div class="comment-container">
                                            @foreach(var comment in Model.Article.Comments.Where(x=>x.ParentId == 0).ToList())
                                            {
                                                <div class="single-comment">
                                                    <span class="reply-btn">
                                                        <a href="#Message" onclick="setParentId(@comment.Id)">پاسخ</a>
                                                    </span>

                                                    <div class="image">
                                                        <img src="~/Theme/assets/img/blog/comment-icon.png" alt="">
                                                    </div>
                                                    <div class="content">
                                                        <h3 class="user">
                                                            @comment.Name <span class="comment-time">
                                                                @comment.CreationDate
                                                            </span>
                                                        </h3>
                                                        <p class="comment-text">
                                                            @comment.Message
                                                        </p>
                                                    </div>
                                                </div>
                                                @foreach(var replyComment in Model.Article.Comments.Where(x=>x.ParentId == comment.Id))
                                                {
                                                    <div class="single-comment reply-comment">
                                                        <div class="image">
                                                            <img src="~/Theme/assets/img/blog/comment-icon.png" alt="">
                                                        </div>
                                                        <div class="content">
                                                            <h3 class="user">
                                                                @replyComment.Name <span class="comment-time">
                                                                    @replyComment.CreationDate
                                                                </span>
                                                            </h3>
                                                            <p class="comment-text">
                                                                @replyComment.Message
                                                            </p>
                                                        </div>

                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="comment-form-container">
                                            <h3 class="comment-form-title">نظر خود را بنویسید</h3>
                                            <p>
                                                ایمیل شما محفوظ است
                                                *
                                            </p> 
                                            <div class="comment-form">
                                                <form method="post">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label>نظر شما</label>
                                                                <textarea name="Message"
                                                                          id="Message"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>نام <span class="required">*</span></label>
                                                                <input type="text" placeholder="مثال: علی علوی" name="Name">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>ایمیل <span class="required">*</span></label>
                                                                <input type="text" placeholder="مثال: contact@gmail.com" name="Email">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>وب سایت</label>
                                                                <input type="text" placeholder="مثال: contact.com" name="Website">
                                                            </div>
                                                        </div>
                                                        <input type="hidden" name="OwnerRecordId" value="@Model.Article.Id" />
                                                        <input type="hidden" name="ArticleSlug" value="@Model.Article.Slug" />
                                                        <input type="hidden" id="ParentId" name="ParentId"/>

                                                        <div class="col-lg-12">
                                                            <button type="submit" class="comment-btn"
                                                                    name="submit">
                                                                ثبت نظر
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 order-2 order-lg-2">
                                <div class="page-sidebar-wrapper">
                                    <div class="single-sidebar-widget">
                                        <h4 class="single-sidebar-widget__title">گروه مقالات</h4>
                                        <ul class="single-sidebar-widget__category-list">
                                            @foreach (var category in Model.ArticleCategories)
                                            {
                                                <li>
                                                    <a asp-page="./ArticleCategory" asp-route-slug="@category.Slug"
                                                       class="@(category.Title == Model.Article.CategoryName ? "active" : "")">
                                                        @category.Title<span class="counter">@category.ArticlesCount</span>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>

                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title">آخرین مقالات</h4>
                                        <div class="block-container">
                                            @foreach (var article in Model.LatestArticles)
                                            {
                                                <div class="single-block d-flex">
                                                    <div class="image">
                                                        <a asp-page="/Article" asp-route-slug="@article.Slug">
                                                            <img src="~/uploadedFiles/@article.Picture"
                                                                 class="img-fluid" alt="@article.PictureAlt" title="@article.PictureTitle">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <a asp-page="/Article" asp-route-slug="@article.Slug">
                                                                @article.Title
                                                            </a> <span>@article.PublishDate</span>
                                                        </p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="single-sidebar-widget">
                                        <h4 class="single-sidebar-widget__title">Popular Tags</h4>
                                        <ul class="single-sidebar-widget__tag-list">
                                            @foreach (var tag in Model.Article.Keywords.Split(","))
                                            {
                                                <li><a href="#">@tag</a></li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>