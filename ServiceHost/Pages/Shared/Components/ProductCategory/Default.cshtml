@using _01_LampShade.Query.Contracts.ProductCategory
@model List<ProductCategoryQueryModel>
<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout">
                        @foreach(var item in Model)
                        {
                            <div class="col-lg-4 col-sm-6 grid-item">
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory" asp-route-slug="@item.Slug">
                                            <img src="~/uploadedFiles/@item.Picture" class="img-fluid" alt="@item.PictureAlt" title="@item.PictureTitle">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@item.Title</h3>
                                        <a asp-page="/ProductCategory" asp-route-slug="@item.Slug">
                                            <i class="ion-android-arrow-dropleft-circle"></i> خرید
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>